[Unit]
Description=YouTube Decider Daemon (produção: liga/desliga youtube-fallback conforme estado)
Wants=network-online.target
After=network-online.target
StartLimitIntervalSec=30
StartLimitBurst=10

[Service]
Type=simple
ExecStart=/usr/bin/python3 /usr/local/bin/yt_decider_daemon.py
Restart=always
RestartSec=3
Nice=5
LimitNOFILE=1048576

[Install]
WantedBy=multi-user.target
